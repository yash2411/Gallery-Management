

<% if post.image? %>
    <%= image_tag post.image.thumb.url %>
<% end %>
 
<p><%= link_to 'Edit', edit_post_path(post), class: "btn btn-outline-primary mt-2" %></p>
<p><%= link_to 'Delete', post_path(post), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger mt-2" %></p>
<hr>